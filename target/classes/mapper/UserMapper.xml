<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaokao.main.Mapper.UserMapper">

    <select id="getUserByUserAccount" parameterType="String" resultType="com.gaokao.main.POJO.User">
      select * from user_info where user_account=#{user_account}
    </select>

    <insert id="insertSingleUser" parameterType="com.gaokao.main.POJO.User">
        insert into user_info (user_account, user_password, user_grade, user_address, user_sex, user_rank) values
            (#{user_account}, #{user_password}, #{user_grade}, #{user_address}, #{user_sex}, #{user_rank})
    </insert>
</mapper>